{
    "host": [
        "api.ambassadors.ink"
    ],
    "client_tls": {
        "allow_insecure_connections": true
    },
    "disable_rest": true,
    "name": "KrakenD on K8s",
    "output_encoding": "no-op",
    "port": 8080,
    "timeout": "3s",
    "version": 3,
    "extra_config": {
        "security/cors": {
            "allow_origins": [
                "localhost",
                "*"
            ],
            "expose_headers": [
                "Content-Length",
                "Content-Type"
            ],
            "allow_headers": [
                "Accept-Language"
            ],
            "allow_methods": [
                "DELETE",
                "GET",
                "HEAD",
                "OPTIONS",
                "PATCH",
                "POST",
                "PUT"
            ],
            "allow_credentials": true,
            "debug": true
        }
    },
    "endpoints": [
        {
            "endpoint": "/registration-exp/api/info",
            "input_headers": [
                "*"
            ],
            "method": "GET",
            "backend": [
                {
                    "host": [
                        "http://registration-exp-api"
                    ],
                    "url_pattern": "/api/info"
                }
            ]
        },
        {
            "endpoint": "/registration-exp/api/citizens/registrations",
            "input_headers": [
                "*"
            ],
            "method": "POST",
            "backend": [
                {
                    "host": [
                        "http://registration-exp-api"
                    ],
                    "url_pattern": "/api/citizens/registrations"
                }
            ]
        },
        {
            "endpoint": "/registration-exp/api/citizens/registrations",
            "input_headers": [
                "*"
            ],
            "method": "OPTIONS",
            "backend": [
                {
                    "host": [
                        "http://registration-exp-api"
                    ],
                    "url_pattern": "/api/citizens/registrations"
                }
            ]
        },
        {
            "endpoint": "/auth/api/citizens/login",
            "input_headers": [
                "*"
            ],
            "method": "POST",
            "backend": [
                {
                    "host": [
                        "http://auth-api"
                    ],
                    "url_pattern": "/api/citizens/login"
                }
            ]
        },
        {
            "endpoint": "/citizens/api/info",
            "input_headers": [
                "*"
            ],
            "method": "GET",
            "backend": [
                {
                    "host": [
                        "http://users-api"
                    ],
                    "url_pattern": "/api/info"
                }
            ]
        },
        {
            "endpoint": "/users/api/citizens/register",
            "input_headers": [
                "*"
            ],
            "method": "POST",
            "backend": [
                {
                    "host": [
                        "http://users-api"
                    ],
                    "url_pattern": "/api/citizens/register"
                }
            ]
        },
        {
            "endpoint": "/users/api/citizens/user",
            "input_headers": [
                "*"
            ],
            "method": "GET",
            "backend": [
                {
                    "host": [
                        "http://users-api"
                    ],
                    "url_pattern": "/api/citizens/user"
                }
            ],
            "extra_config": {
                "auth/validator": {
                    "alg": "RS256",
                    "audience": [
                        "citizens-folder"
                    ],
                    "cache": true,
                    "cookie_key": "jwt",
                    "issuer": "https://securetoken.google.com/citizens-folder",
                    "jwk_url": "https://www.googleapis.com/service_accounts/v1/jwk/securetoken@system.gserviceaccount.com",
                    "operation_debug": true,
                    "roles_key": "role",
                    "roles": [
                        "citizen"
                    ]
                }
            }
        }
    ]
}